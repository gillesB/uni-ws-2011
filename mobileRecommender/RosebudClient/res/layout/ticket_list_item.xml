<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gridLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:rowCount="2"
    android:useDefaultMargins="true" >

   <ImageView
       android:id="@+id/ticketList_image"
       android:layout_width="70dp"
       android:layout_height="86dp"
       android:layout_column="0"
       android:layout_gravity="center"
       android:layout_row="0"
       android:layout_rowSpan="3"
       android:src="@drawable/rosebud_luncher_icon" />

    <TextView
        android:id="@+id/ticketList_moviename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_row="0"
        android:text="name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/ticketList_hall"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:text="Hall: 4"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ticketList_amount"
        android:layout_width="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:text="Amount: 10"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/ticketList_time"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_row="1"
        android:text="Time: 23:23"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</GridLayout>